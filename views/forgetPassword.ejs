<%# ADDING HEADER %>
<%- include("partials/header.ejs" , {pageTitle : "CollegeGeeks: :: forgetPassword" , style: "css/style.css"}); -%>

<%# ADDING NAVBAR %>
<div class="container mt-5">
  <% if(error.length>0) {%>
    <div class="alert alert-danger d-flex align-items-center" role="alert">
      <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
      <div>
          <i class="fas fa-exclamation-triangle"></i> <b><%=error %></b> 
      </div>
    </div>
  <% } %>  
</div>
<div class="forgetPassword_body d-flex justify-content-center container mt-2">
        <div class="card" style="width: 28rem;">
            <div class="card-body">
              <h5 class="card-title  mb-4" style="text-align: center;">Forget Password</h5>
              <p class="card-text">
                  <form method="post" action=<%="/auth/forget-password/" + token %>>
                    <span class="mb-2"><b>Enter new Password</b></span>
                    <div class="form-floating mt-2">
                        <input type="password" class="form-control" id="floatingPassword" placeholder="New Password" name="password" required>
                        <label for="floatingPassword">New Password</label>
                      </div>
                      <div class="form-floating mt-2">
                        <input type="password" class="form-control" id="floatingPassword" placeholder="Confirm Password" name="confirmPassword" required>
                        <label for="floatingPassword"> Confirm Password</label>
                      </div>
                       <button type="submit" class="btn btn-outline-primary mt-4">Submit</button>
                  </form>
              </p>
            </div>
        </div>
</div>











